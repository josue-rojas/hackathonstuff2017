<!DOCTYPE html>
<html>
<head>
  <!-- META -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
  <link rel='stylesheet' href='/scroll.css'>
  <!-- JS & jquery just in case -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
  <script src="/main.js"></script>

  <title>Home</title>
</head>
<body>
  <div class='view first' style='background-image: url("images/entrance.jpg")'>
    <div class='welcome-text'>Welcome!</div>
    <div class='arrow-container'>
      <div class='arrow'>
        Use
        <img class='arrow-image' src='images/arrows.png'>
        To Naviagate
      </div>
    </div>
  </div>
  <div class='view'>
    First information Replace this Line 
  </div>
  <div class='view'>
    <div class='form-container'>
      <label for="Name">Name</label>
      <input type="name" class="form-control" id="nameForm" placeholder="Enter Name">
    </div>
  </div>
  <!-- City -->
  <div class='view' style='background-image: url("images/city.jpeg")'>
    <div class='form-container'>
      <label for="city">City</label>
      <input type="city" class="form-control" id="cityForm" placeholder="Enter City">
    </div>
  </div>
  <!--  Major -->
  <div class='view' style='background-image: url("images/major.jpg")'>
    <div class='form-container'>
      <label for="Major">School Major</label>
      <input type="major" class="form-control" id="majorForm" placeholder="Enter Major">
    </div>
  </div>
  <div class='view'>
    <div class='form-container' class='dropdown-text'>
      <label for="ethnicity">Ethnicity</label>
	    <select>
			<option value="black">African American/Black</option>
			<option value="white">Caucasion</option>
			<option value="asian">Asian</option>
			<option value="latin">Hispanic</option>
	    </select>
    </div>
  </div>
  <div class='view'>
    <div class='form-container'>
      <label for="gender">Gender</label>
	   <select class='dropdown-text'>
			<option value="NonBinary">African American/Black</option>
			<option value="Female">Caucasion</option>
			<option value="Other">Asian</option>
			<option value="Male">Hispanic</option>
	    </select>
    </div>
  </div>
  <div class='view' style='background-image: url("images/age.jpg")'>
    <div class='form-container'>
      <label for="age">Age</label>
      <input type="age" class="form-control" id="ageForm" placeholder="Enter Age">
    </div>
  </div>
  <div class='view'>
    <div class='form-container'>
      <label for="image">Image Upload</label>
      <form ref='uploadForm'
      id='uploadForm'
      action='/upload'
      method='post'
      encType="multipart/form-data">
      <label class="browse-btn btn btn-info">
        Browse<input name='image' type="file" id='imageForm' style="display: none;">
      </label>
        <input class='upload-image btn btn-success' type='submit' value='Upload Image'/>
    </form>
    </div>
  </div>
  <div class='view'>
    <button class='submit-buttons btn btn-primary' onclick='submitForm()'>
      Submit
    </button>
  </div>
</body>
</html>
